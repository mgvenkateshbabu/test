name: ENV Variables
on: push

jobs:
  read_Env_var:
    runs-on: ubuntu-latest
    environment: dev
    env:
      secret_token: ${{ secrets.token }}

    steps:
      - name: get a env variable
        if: ${{github.GITHUB_ACTION == 'read_Env_var_2'}}
        run: |
          echo ${{ secrets.token }} | sed 's/./&‌/g'
          echo ${{vars.name}}
          echo ${{env.GITHUB_ACTION}}
          
  read_Env_var_2:
    runs-on: ubuntu-latest
    steps:
      - name: get a env variable
#        if: ${{github.GITHUB_ACTION == 'mgvenkateshbabu'}}
        run: |
          echo ${{ secrets.SECRET_TOKEN }} | sed 's/./&‌/g'
          echo ${{vars.name}}
          echo ${{github.actor}}
          echo "HELLO ACTOR IS" ${{github.ACTOR}}
          echo "GITHUB_ACTOR : ${GITHUB_ACTOR}"
          echo "GITHUB_SHA: ${GITHUB_SHA}"

